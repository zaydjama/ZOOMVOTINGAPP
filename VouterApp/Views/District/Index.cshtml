@model IEnumerable<VouterApp.Models.DistrictModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section-body">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4>Region Info</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">


                            <p>
                                <a class="btn btn-danger" href="/District/save/0" style="margin-bottom:20px; margin-top:20px;">Add New</a>

                            </p>
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Region.RegionName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DistricName)
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Region.RegionName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DistricName)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "save", new { id = item.Id }, new { @class = "btn btn-danger" }) 

                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                                        </td>
                                    </tr>
                                }

                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>