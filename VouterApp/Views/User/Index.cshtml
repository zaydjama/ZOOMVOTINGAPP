@model IEnumerable<VouterApp.Models.UserModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section-body">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4>User Info</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">



                            <p>
                                <a class="btn btn-danger" href="/User/save/0" style="margin-bottom:20px; margin-top:20px;">Add New</a>
                            </p>
                            <table class="table table-hover">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Candidate.FirstName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UserName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Paswd)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Roles)
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Candidate.FirstName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Paswd)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Roles)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "save", new { id = item.ID }, new { @class = "btn btn-danger" }) 

                                            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
                </div>
                </div>
                </div>
